   
{
    "manifest_version": 3,
    "name": "TLDR",
    "description": "TL-DR (Too Long - Didn’t Read) details a platform’s terms and conditions in bite size, digestible chunks. Be an informed consumer!",
    "permissions": ["storage", "activeTab", "tabs","scripting"],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "version": "0.0.1",
    "minimum_chrome_version": "42",
    "devtools_page": "main.html",

    "icons": {
      "128": "logo/tldr.png"
    },
    "action": {
        "default_title": "TLDR",
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
      }
  }
